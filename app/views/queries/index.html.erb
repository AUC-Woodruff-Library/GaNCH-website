<h1>Queries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Geo Scope</th>
      <th>Wikidata query</th>
      <th>Wikidata response</th>
      <th>Owner</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @queries.each do |query| %>
      <% user = get_user query %>
      <tr>
        <td><%= query.title %></td>
        <td><%= query.scope %></td>
        <td><%= query.request %></td>
        <td><%= truncate query.response %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', query %></td>
        <td><%= link_to 'Edit', edit_query_path(query) %></td>
        <td><%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Query', new_query_path %>
