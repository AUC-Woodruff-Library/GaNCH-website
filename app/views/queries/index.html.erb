<h1>Queries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Request</th>
      <th>Response</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @queries.each do |query| %>
      <tr>
        <td><%= query.title %></td>
        <td><%= query.request %></td>
        <td><%= truncate query.response %></td>
        <td>created by: <%= query.inspect %></td>
        <td><%= link_to 'Show', query %></td>
        <td><%= link_to 'Edit', edit_query_path(query) %></td>
        <td><%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Query', new_query_path %>
