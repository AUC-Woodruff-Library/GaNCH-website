<h1>Recipients</h1>

<% if @recipients.length > 0 %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Organization</th>
      <th>Created by</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @recipients.each do |recipient| %>
      <% user = get_user recipient %>
      <tr>
        <td><%= recipient.name %></td>
        <td><%= recipient.title %></td>
        <td><%= recipient.email %></td>
        <td><%= recipient.phone %></td>
        <td><%= recipient.organization %></td>

        <td><%= user.name %></td>
        <td><%= link_to 'Show', recipient %></td>
        <td><%= link_to 'Edit', edit_recipient_path(recipient) %></td>
        <td><%= link_to 'Destroy', recipient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% end %>

<%= link_to 'New recipient', new_recipient_path %>
